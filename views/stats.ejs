<%- include('partials/header') %>

<body>
    <div class="text-box">
        <h1>Stats for <%= name %> </h1>
        <!-- <a href="javascript:history.back()" style="float: left;" ><img src="../resources/RedBackArrow.png" width="50" height="50"></a> -->
        <div class="row">
            <div class="col-md-6">
                <div class="font-md htb-yellow-text">Games Won:
                    <span class="htb-white-text" id="gameWins"><%=game.wins%></span>
                </div>

                <div class="font-md htb-yellow-text">Games Played:
                    <span class="htb-white-text" id="gameTotal"><%=game.gamesplayed%></span>
                </div> 

                <div class="font-md htb-yellow-text">Game Win Rate:
                    <span class="htb-white-text"id="winPercent"><%=(parseFloat(game.wins/parseFloat(game.gamesplayed) * 100).toPrecision(3))%>%</span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="font-md htb-yellow-text">Correct Answers:
                    <span class="htb-white-text"id="triviaCorrect"><%=trivia.correct%></span>
                </div>

                <div class="font-md htb-yellow-text">Total Questions:
                    <span class="htb-white-text"id="triviaTotal"><%=trivia.questionsanswered%></span>
                </div>

                <div class="font-md htb-yellow-text">Trivia Correct Rate:
                    <span class="htb-white-text"id="triviaPercent"><%=(parseFloat(trivia.correct/parseFloat(trivia.questionsanswered) * 100).toPrecision(3))%>%</span>
                </div>
            </div>
        </div>
        <br>
        <!-- <svg style="margin-left: 0vw" width="100" height="100" class="chart">
        <circle r="25" cx="50" cy="50" class="pie"/>
        </svg> -->
    </div>
</body>

